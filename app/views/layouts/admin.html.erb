<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'admin' %>
    <%= javascript_pack_tag 'admin' %>


  </head>

  <body>
    <div class="notification-area">
      <% flash.each do |name, message| %>
        <div class="notification is-<%= name %>">
          <%= message %>
        </div>
      <% end %>
    </div>

    <% if @current_administrator.present? %>
      <div class="admin-layout">
        <div class="admin-layout__wrap">
          <div class="admin-layout__aside">
            <aside class="menu">
              <ul class="menu-list">
                <li><%= link_to 'ユーザー管理', admin_users_path %></li>
                <li><%= link_to 'イベント管理', admin_events_path %></li>
                <li><%= link_to '試合管理', admin_games_path %></li>
                <li><%= link_to 'お知らせ管理', admin_notices_path %></li>
              </ul>
            </aside>
            <div class="admin-layout__aside_footer">
              <aside class="menu">
                <ul class="menu-list">
                  <li><%= link_to 'ログアウト', admin_logout_path %></li>
                </ul>
              </aside>
            </div>
          </div>
          <div class="admin-layout__body">
            <%= yield %>
          </div>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
